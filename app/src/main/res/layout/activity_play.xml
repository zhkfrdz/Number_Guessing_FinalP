<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/audiowide"
            android:text="EASY LEVEL"
            android:textColor="#fff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/heartsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLevel">

            <ImageView
                android:id="@+id/heart1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/heart2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/heart3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/heart4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/heart"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/heart5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/heart"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/heart6"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/heart"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgCats"
            android:layout_width="334dp"
            android:layout_height="311dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heartsContainer" />

        <TextView
            android:id="@+id/tvRange"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:maxLines="2"
            android:paddingHorizontal="16dp"
            android:text="We are thinking of a number between 1 and 50"
            android:textColor="#FF6B4A"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/imgCats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="HINTS: 0"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvRange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etGuess"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_white_rounded"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:hint="Enter your guess"
            android:inputType="number"
            android:padding="0dp"
            android:textColor="#fff"
            android:textColorHint="#888"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tvHint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:foreground="@drawable/ripple_white" />

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/etGuess"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnGuess"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#FF6B4A"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/audiowide"
                android:foreground="@drawable/ripple_grey"
                android:text="Guess"
                android:textColor="#fff"
                android:textSize="20sp"
                app:cornerRadius="30dp"
                app:rippleColor="#383838" />

            <Button
                android:id="@+id/btnHintButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:backgroundTint="#FF6B4A"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/audiowide"
                android:foreground="@drawable/ripple_grey"
                android:text="Hint"
                android:textColor="#fff"
                android:textSize="20sp"
                app:cornerRadius="30dp"
                app:rippleColor="#383838" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGiveUp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/audiowide"
            android:foreground="@drawable/ripple_grey"
            android:text="Back to Menu"
            android:textColor="#FF6B4A"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonsContainer"
            app:rippleColor="#383838" />

        <ImageButton
            android:id="@+id/btnTryAgain"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_retry"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnGiveUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvHintMessage"
            android:layout_width="192dp"
            android:layout_height="151dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bubble"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:maxWidth="160dp"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/imgCats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/heartsContainer"
            app:layout_constraintVertical_bias="0.245" />

        <ImageButton
            android:id="@+id/btnHintInfo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_red_button"
            android:contentDescription="Hint information"
            android:elevation="4dp"
            android:src="@android:drawable/ic_menu_help"
            android:tint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/tvHint"
            app:layout_constraintStart_toEndOf="@id/tvHint"
            app:layout_constraintTop_toTopOf="@id/tvHint" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_orange"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:elevation="4dp"
            android:tint="#FFFFFF"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
