<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".activities.PlayActivity">

    <!-- Guidelines for proportional spacing -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"/>

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="EASY LEVEL"
        android:textColor="#fff"
        android:textSize="28sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="16sp"
        android:autoSizeMaxTextSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/heartsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvLevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/heart1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heart2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heart3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/heart" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgCats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/play"
        app:layout_constraintTop_toBottomOf="@id/heartsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.12"
        android:contentDescription="Game image"/>

    <TextView
        android:id="@+id/tvRange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:maxLines="2"
        android:text="We are thinking of a number between 1 and 50"
        android:textColor="#FF6B4A"
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/imgCats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="HINTS: 0"
        android:textColor="#fff"
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/tvRange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/etGuess"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/edittext_white_rounded"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:hint="Enter your guess"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#888"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Guess and Hint Buttons Row -->
    <LinearLayout
        android:id="@+id/guessHintRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/etGuess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnGuess"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="GUESS"
            android:backgroundTint="#FF6B4A"
            android:textColor="#fff"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            app:cornerRadius="30dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnHint"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="HINT"
            android:backgroundTint="#FF6B4A"
            android:textColor="#fff"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            app:cornerRadius="30dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Give Up Button -->
    <Button
        android:id="@+id/btnGiveUp"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="GIVE UP"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FF6B4A"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/guessHintRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <ImageButton
        android:id="@+id/btnTryAgain"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_retry"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnGiveUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvHintMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:maxWidth="160dp"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/btnTryAgain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
