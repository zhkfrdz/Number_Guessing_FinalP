<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Guessing Game"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/easyButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Easy (1-10)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/mediumButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Medium (1-50)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/hardButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hard (1-100)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/impossibleButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Impossible (1-500)"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/highScoresTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/highScoresText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy: 0\nMedium: 0\nHard: 0\nImpossible: 0"
        android:textSize="16sp"
        android:gravity="center"/>

</LinearLayout> 