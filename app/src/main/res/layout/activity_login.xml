<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="32dp">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/play" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/audiowide"
        android:text="Guess the Account"
        android:textColor="#fff"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to your account"
        android:textColor="#FF6B4A"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edittext_white_rounded"
        android:hint="Username"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#fff"
        android:textColorHint="#ccc"
        android:fontFamily="@font/poppins_medium"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_white_rounded"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="48dp"
        android:textColor="#fff"
        android:textColorHint="#ccc"
        android:fontFamily="@font/poppins_medium"/>

    <ImageView
        android:id="@+id/ivTogglePasswordLogin"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-37dp"
        android:src="@drawable/hide"
        android:contentDescription="Show/Hide Password"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Login"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF6B4A"
        android:textColor="#fff"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        android:fontFamily="@font/poppins_medium"
        style="@style/Widget.MaterialComponents.Button"/>

    <Button
        android:id="@+id/btnGoToRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Register"
        android:layout_marginTop="16dp"
        android:backgroundTint="#333333"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        style="@style/Widget.MaterialComponents.Button"/>

</LinearLayout>
